<package>
 <description brief="A fast interpolated navigation function">
  A fast interpolated navigation function that can be computed using an A* heuristic or Dijkstra.
 </description>
 <author>Kurt Konolige, Eitan Marder-Eppstein</author>
 <license>BSD</license>
 <review status="proposal cleared" notes=""/>
 <url>http://pr.willowgarage.com/wiki/navfn</url>
 <depend package="rosconsole"/>
 <depend package="roscpp"/>
 <depend package="geometry_msgs"/>
 <depend package="costmap_2d"/>
 <depend package="nav_robot_actions"/>
 <depend package="nav_msgs"/>
 <depend package="tf"/>
 <depend package="visualization_msgs"/>

 <rosdep name="fltk"/>
 <rosdep name="netpbm"/>
 <export>
  <cpp cflags="-I${prefix}/include -I${prefix}/srv/cpp -I${prefix}/msg/cpp" lflags="-Wl,-rpath,${prefix}/lib -L${prefix}/lib -lnavfn"/>
 </export>
</package>
