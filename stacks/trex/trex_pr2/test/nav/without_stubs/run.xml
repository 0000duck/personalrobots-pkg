<launch>
  <master auto="start"/>
  <param name="/trex/enable_switch_controllers" value="true"/>
  <node pkg="trex_pr2" type="stub_ros_container" respawn="false" />

  <include file="$(find test_trex_pr2)/cfg/nav_stack_stage.launch" />

  <param name="/trex/input_file" value="driver.cfg"/>
  <param name="/trex/path" value="$(find trex_pr2)/cfg:$(find trex_ros)/cfg"/>
  <param name="/trex/start_dir" value="$(find trex_pr2)/test/nav/without_stubs"/>
  <param name="/trex/time_limit" value="60"/>
  <param name="/trex/log_dir" value="$(find trex_pr2)/logs"/>
  <param name="/trex/play_back" value="0"/>
  <node pkg="trex_pr2" type="trexdebug"/>
</launch>
