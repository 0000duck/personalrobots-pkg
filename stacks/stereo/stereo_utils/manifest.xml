<package>
  <description>
    classes and functions for converting from disparity space to Cartesion space, to synthesize
    image from 3d point cloud, to compute spatial masks.
  </description>
  <author>Jindong (JD) Chen, modified by Gary Bradski (x,y) index to (X,Y,Z)</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <depend package="roscpp"/>
  <depend package="rostest"/>
  <depend package="opencvpython"/>
  <depend package="opencv_latest"/>
  <depend package="rosrecord"/>
  <depend package="fast_detector"/>
  <depend package="star_detector"/>
  <depend package="vop"/>
  <depend package="calonder_descriptor"/>
  <export>
    <cpp cflags="-I${prefix}/include" lflags="-L${prefix}/lib -lstereo_utils -Wl,-rpath,${prefix}/lib" />
  </export>
  <sysdepend os="ubuntu" version="7.04-feisty" package="python-imaging"/>
  <sysdepend os="ubuntu" version="8.04-hardy" package="python-imaging"/>
  <rosdep name="python-imaging"/>
</package>
