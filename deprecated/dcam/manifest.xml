<package>
  <description>A dc1394 camera library with proper support for stereo and image processing.</description>
  <author>Kurt Konolige, Jeremy Leibs</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <export>
    <cpp cflags="-g -I${prefix}/include" lflags="-L${prefix}/lib -ldcam"/>
  </export>
  <depend package="libdc1394v2"/>
  <depend package="opencv_latest"/>
  <depend package="roscpp"/>
  <depend package="std_msgs"/>
  <depend package="std_srvs"/>
  <depend package="sensor_msgs"/>
  <depend package="diagnostic_updater"/>
  <depend package="rospy"/>
  <depend package="stereo_msgs"/>
  <depend package="image_proc"/>
  <depend package="stereo_image_proc"/>

  <rosdep name="fltk"/>
  <url>http://www.ros.org/wiki/dcam</url>
</package>
