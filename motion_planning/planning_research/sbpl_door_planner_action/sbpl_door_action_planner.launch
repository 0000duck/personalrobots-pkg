<launch>

    <include file="$(find pr2_alpha)/$(env ROBOT).machine" /> 

  <master auto="start"/>
  <group ns="wg">
    <node pkg="sbpl_door_planner_action" type="door_planner_action" respawn="false" name="sbpl_door_planner" output="screen">

      <!-- Start Costmap Parameters -->
      <param name="costmap/global_frame" value="odom_combined" />
      <param name="costmap/robot_base_frame" value="base_link" />
      <param name="costmap/update_frequency" value="5.0" />
      <param name="costmap/publish_frequency" value="2.0" />
      <param name="costmap/obstacle_range" value="2.5" />
      <param name="costmap/max_obstacle_height" value="2.0" />
      <param name="costmap/raytrace_range" value="3.0" />

      <param name="costmap/observation_sources" value="base_scan" />

      <param name="costmap/base_scan/observation_persistence" value="0.0" />
      <param name="costmap/base_scan/expected_update_rate" value="0.2" />
      <param name="costmap/base_scan/data_type" value="LaserScan" />
      <param name="costmap/base_scan/clearing" value="true" />

      <param name="costmap/rolling_window" value="true" />
      <param name="costmap/static_map" value="false" />
      <param name="costmap/inflation_radius" value="0.46" />

      <!-- begin only used if static map is set to false -->
      <param name="costmap/width" value="3.0" />
      <param name="costmap/height" value="3.0" />
      <param name="costmap/origin_x" value="-1.5" />
      <param name="costmap/origin_y" value="-1.5" />
      <param name="costmap/resolution" value="0.025" />
      <!-- end only used if static map is set to false -->

      <param name="costmap/cost_scaling_factor" value="1.0" />
      <param name="costmap/lethal_cost_threshold" value="100" />
      <!-- End Costmap Parameters -->
     <remap from="raw_obstacles" to="~raw_obstacles" />
     <remap from="inflated_obstacles" to="~inflated_obstacles" />

     <!--param name="sbpl_action_file" textfile="$(find mpbench)/data/pr2sides.mprim" /-->
     <!--param name="sbpl_action_file" textfile="$(find sbpl)/matlab/mprim/mprim_unic_sidebackdiag.mprim" /-->
     <param name="sbpl_action_file" textfile="$(find sbpl)/matlab/mprim/pr2_all_2.5cm_20turncost.mprim" />

     <param name="animate" value="false"/>
     <param name="do_control" value="true"/>
     <param name="animate_frequency" value="10.0"/>
     <param name="controller_frequency" value="40.0"/>
    </node>
  </group>
</launch>
