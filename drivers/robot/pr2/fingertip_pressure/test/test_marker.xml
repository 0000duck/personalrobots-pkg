<launch>
  <!-- Bring up the nodes we want to test. -->
  <node pkg="fingertip_pressure" type="fingertip_sensor_sim.py" />
  <node pkg="fingertip_pressure" type="pressure_info.py" />
  <node pkg="fingertip_pressure" type="pressure_visualization_marker.py" />
  
  <!-- Test for publication of 'scan' topic -->
  <!-- Run hztest -->
  <test test-name="hztest_test_scan" pkg="rostest" type="hztest" name="scan_test">
    <param name="topic" value="/visualization_marker" />  
    <param name="hz" value="880" />
    <param name="hzerror" value="30" />
    <param name="test_duration" value="3.0" />
    <param name="check_intervals" value="false" />    
  </test>

</launch>
