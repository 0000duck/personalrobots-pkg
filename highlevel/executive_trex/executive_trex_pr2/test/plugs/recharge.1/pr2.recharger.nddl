#include "plugs/recharger.nddl"

close();

// Load the topological map
map_initialize_from_file("willow.tmap");

// Generate a goal to recharge using the current position. Note that this requires the robot to be correctly localized!
// We assume the robot is located near enough to the socket to complete using local navigation only
rejectable(Recharger.Active g);
g.frame_id = "map";
g.outlet_id = 1;
eq(g.max_duration, 500);
