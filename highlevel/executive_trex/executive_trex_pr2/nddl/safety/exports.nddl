/**
 * Tracks the state if the arms are tucked or not. This is a safety issue for mobility.
 */
class ArmsTucked extends AgentTimeline {

  predicate Holds{
    bool value;
    defaultOnCommit(value, false);
  }

  predicate False{}

  ArmsTucked(Mode _mode){
    super(_mode, "Holds");
  }
};

