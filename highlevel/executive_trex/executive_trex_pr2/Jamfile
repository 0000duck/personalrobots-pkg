SubDir executive_trex_pr2 ;

# The path to search for nddl input files
SEARCH_SOURCE = $(EXEC_HOME)/nddl $(TREX)/agent/base $(PLASMA)/NDDL/base ;

# Input files
local TestInputs = 
	[ FDirName . test pr2.test.nddl ]
	[ FDirName . wpc_gazebo.0 pr2.exec.nddl ]
	[ FDirName . wpc_gazebo.1 pr2.exec.nddl ]
