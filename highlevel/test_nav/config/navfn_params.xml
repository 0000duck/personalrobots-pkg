<param name="navfn/costmap/publish_frequency" value="0.0" />

<param name="navfn/costmap/obstacle_range" value="2.5" />
<param name="navfn/costmap/max_obstacle_height" value="2.0" />
<param name="navfn/costmap/raytrace_range" value="3.0" />

<param name="navfn/costmap/observation_topics" value="base_scan" />

<param name="navfn/costmap/base_scan/sensor_frame" value="frame_from_message" />
<param name="navfn/costmap/base_scan/observation_persistance" value="0.0" />
<param name="navfn/costmap/base_scan/expected_update_rate" value="0.2" />
<param name="navfn/costmap/base_scan/data_type" value="LaserScan" />
<param name="navfn/costmap/base_scan/clearing" value="true" />

<param name="navfn/costmap/static_map" value="true" />
