<launch>
  <param name="/use_sim_time" value="true" />
  <!-- send pr2.xml to param server -->
  <param name="light"      textfile="$(find gazebo_robot_description)/gazebo_objects/light.model" />
  <param name="light2"      textfile="$(find gazebo_robot_description)/gazebo_objects/light2.model" />

  <!-- push robotdesc/pr2 to factory and spawn robot in gazebo -->
  <node pkg="gazebo_plugin" type="xml2factory" args="light" respawn="false" output="screen" />
  <node pkg="gazebo_plugin" type="xml2factory" args="light2" respawn="false" output="screen" />
  
</launch>

