<launch>
  <group name="wg">
    <param name="base_controller/odom_publish_rate" value="30.0"/>
    <node pkg="mechanism_control" type="mech.py" args="sp $(find pr2_default_controllers)/base_controllers.xml" output="screen"/>
    <node pkg="mechanism_control" type="mech.py" args="sp $(find pr2_default_controllers)/laser_controller_config.xml" output="screen"/>
    <node pkg="pr2_mechanism_controllers" type="control_laser.py" args="laser_controller sine 1 .45 .40" />
  </group>
</launch>
