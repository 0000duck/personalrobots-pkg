<launch>
<node pkg="nav" type="local_controller" respawn="false" name="local_controller_node" output="screen" machine="three">
  <remap from="/move_base_node/activate" to="/goal" />
  <remap from="~base_local_planner/global_plan" to="/gui_path" />
  <remap from="~base_local_planner/local_plan" to="/local_path" />
  <remap from="~base_local_planner/robot_footprint" to="/robot_footprint" />

  <param name="controller_frequency" value="20.0" />

  <rosparam file="$(find 2dnav_pr2)/local_controller/costmap_common_params.yaml" command="load" />
  <rosparam file="$(find 2dnav_pr2)/local_controller/base_local_planner_params.yaml" command="load" />
</node>
</launch>
