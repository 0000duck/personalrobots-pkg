  </controller>

  <controller name="l_wrist_roll_controller" topic="l_wrist_roll_controller" type="JointPositionControllerNode">
    <joint name="l_wrist_roll_joint" >
      <pid p="1" d="0.01" i="0.1" iClamp="1" />
