<?xml version="1.0"?>

<controllers>
  <!-- ========================================= -->
  <!-- left arm array -->
  <controller name="left_arm_controller" type="ArmTrajectoryControllerNode">
    <listen_topic name="arm_trajectory_command" />
    <kinematics>
      <elem key="kdl_chain_name">left_arm</elem>
    </kinematics>
    <map name="controller_param">
      <elem key="kdl_chain_name">left_arm</elem>
    </map>
    <controller name="l_shoulder_pan_controller" topic="l_shoulder_pan_controller" type="JointPositionController">
      <joint name="l_shoulder_pan_joint" >
        <pid p="10.0" d="2.0" i="1.0" iClamp="4.0" />
      </joint>
    </controller>
    <controller name="l_shoulder_lift_controller" topic="l_shoulder_lift_controller" type="JointPositionController">
      <joint name="l_shoulder_lift_joint" >
        <pid p="10.0" d="2.0" i="1.0" iClamp="4.0" />
      </joint>
    </controller>
    <controller name="l_upperarm_roll_controller" topic="l_upperarm_roll_controller" type="JointPositionController">
      <joint name="l_upper_arm_roll_joint" >
        <pid p="4.0" d="1.0" i="0.5" iClamp="1.0" />
      </joint>
    </controller>
    <controller name="l_elbow_controller" topic="l_elbow_flex_controller" type="JointPositionController">
      <joint name="l_elbow_flex_joint" >
        <pid p="10.0" d="2.0" i="1.0" iClamp="4.0" />
      </joint>
    </controller>
    <controller name="l_forearm_roll_controller" topic="l_forearm_roll_controller" type="JointPositionController">
      <joint name="l_forearm_roll_joint" >
        <pid p="4.0" d="1.0" i="0.5" iClamp="1.0" />
      </joint>
    </controller>

    <controller name="l_wrist_flex_controller" type="JointPositionController">
      <joint name="l_wrist_flex_joint">
        <pid p="4" i="0.5" d="2.0" iClamp="4.0" />
      </joint>
    </controller>

    <controller name="l_wrist_roll_controller" type="JointPositionController">
      <joint name="l_wrist_roll_joint">
        <pid p="4" i="0.5" d="2.0" iClamp="4.0" />
      </joint>
    </controller>

    <trajectory interpolation="linear" />

  </controller>
  <controller name="l_gripper_controller" topic="l_gripper_controller" type="JointPositionControllerNode">
    <joint name="l_gripper_l_finger_joint">
      <pid p="0.5" d="0.000001" i="0.001" iClamp="0.01" />
    </joint>
  </controller>
</controllers>
