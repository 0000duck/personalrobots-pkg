<launch>
  <group name="wg">
    <!-- send pr2_l_arm.xml to param server -->
    <param name="robotdesc/pr2" command="$(find xacro)/xacro.py '$(find pr2_defs)/robots/l_arm.xacro.xml'" />

    <!-- -g flag runs gazebo in gui-less mode -->
    <node pkg="gazebo" type="gazebo" args="-n $(find gazebo_robot_description)/gazebo_worlds/empty.world" respawn="false" output="screen">
      <env name="LD_LIBRARY_PATH" value="$(find gazebo_plugin)/lib:$(find gazebo)/gazebo/lib:$(find Cg)/Cg/lib:$(optenv LD_LIBRARY_PATH)" />
      <env name="GAZEBO_RESOURCE_PATH" value="$(find gazebo_robot_description)/world" />
      <env name="OGRE_RESOURCE_PATH" value="$(find ogre)/ogre/lib/OGRE" />
      <env name="MC_RESOURCE_PATH" value="$(find gazebo_robot_description)/world" />
    </node>

    <!-- push robotdesc/pr2 to factory and spawn robot in gazebo -->
    <node pkg="gazebo_plugin" type="urdf2factory" args="robotdesc/pr2" respawn="false" output="screen"/>

    <!-- start arm controller -->
    <node pkg="mechanism_control" type="spawner.py" args="$(find arm_gazebo)/l_arm_test_controller.xml" respawn="false"  /> <!-- load test arm controller -->

    <!-- send arm a command -->
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_shoulder_lift_controller 0.1" respawn="false" output="screen" />
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_upper_arm_roll_controller 0.2" respawn="false" output="screen" />
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_elbow_flex_controller 0.3" respawn="false" output="screen" />
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_elbow_roll_controller 0.4" respawn="false" output="screen" />
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_forearm_roll_controller 0.5" respawn="false" output="screen" />
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_wrist_flex_controller 0.6" respawn="false" output="screen" />
    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_wrist_roll_controller 0.7" respawn="false" output="screen" />

    <node pkg="robot_mechanism_controllers" type="control.py" args="set l_gripper_controller 0.8" respawn="false" output="screen" /> <!-- open gripper .5 radians -->

    <!-- for visualization -->
    <!--
    <node pkg="rviz" type="rviz" respawn="false" output="screen" />
    <include file="$(find arm_gazebo)/debug_plot.launch"/>
    <node pkg="arm_gazebo" type="l_arm_test.py" output="screen"/>
    -->


  </group>
</launch>

