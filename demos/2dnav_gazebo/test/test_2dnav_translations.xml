<launch>
  <master auto="start" />

    <!-- load robot -->
    <include file="$(find pr2_prototype1_gazebo)/pr2_prototype1_empty_no_x.launch"/>

    <!-- load map -->
    <node pkg="map_server" type="map_server" args="$(find gazebo_robot_description)/world/Media/materials/textures/map_blank.png 0.1" respawn="false" output="screen" />

    <!-- nav-stack -->
    <include file="$(find 2dnav_gazebo)/2dnav-stack-fake_localization.xml"/>

    <!-- for visualization -->
    <!--
    <node pkg="pr2_gui" type="pr2_gui" respawn="false" output="screen" />
    <node pkg="ogre_visualizer" type="standalone_visualizer.py" respawn="false" output="screen" />
    <node pkg="nav_view" type="nav_view" respawn="false" output="screen" />
    -->

    <!--
    <param name="/trex/ping_frequency" value="1"/>
    <node pkg="highlevel_controllers" type="recharge_controller" args="" respawn="false" />
    <node pkg="kinematic_planning" type="kinematic_planning" args="robotdesc/pr2"/>
    <include file="$(find world_3d_map)/run.xml"/>
    <node pkg="highlevel_controllers" type="move_arm" args="right" respawn="false"/>
    <node pkg="highlevel_controllers" type="move_arm" args="left" respawn="false" />
    <node pkg="highlevel_controllers" type="move_end_effector" args="right" respawn="false"/>
    -->

    <!-- test -->
    <test test-name="2dnav_gazebo_test_2dnav_translations_x1"   pkg="2dnav_gazebo" type="test_2dnav_translations.py" args="-x 26.65 -y 25.65 -t 0      -nav_tol 0.28 -odom_tol 0.01" />
    <test test-name="2dnav_gazebo_test_2dnav_translations_y1"   pkg="2dnav_gazebo" type="test_2dnav_translations.py" args="-x 25.65 -y 26.65 -t 0      -nav_tol 0.28 -odom_tol 0.01" />
    <test test-name="2dnav_gazebo_test_2dnav_translations_tpi"  pkg="2dnav_gazebo" type="test_2dnav_translations.py" args="-x 25.65 -y 25.65 -t 3.1416 -nav_tol 0.28 -odom_tol 1.00" /> <!-- odom drift is not checked here -->
    <test test-name="2dnav_gazebo_test_2dnav_translations_x10"  pkg="2dnav_gazebo" type="test_2dnav_translations.py" args="-x 35.65 -y 25.65 -t 0      -nav_tol 0.28 -odom_tol 0.01" />
    <test test-name="2dnav_gazebo_test_2dnav_translations_y10"  pkg="2dnav_gazebo" type="test_2dnav_translations.py" args="-x 25.65 -y 35.65 -t 0      -nav_tol 0.28 -odom_tol 0.01" />
    <test test-name="2dnav_gazebo_test_2dnav_translations_t2pi" pkg="2dnav_gazebo" type="test_2dnav_translations.py" args="-x 25.65 -y 25.65 -t 6.2832 -nav_tol 0.28 -odom_tol 1.00" /> <!-- odom drift is not checked here -->
</launch>
