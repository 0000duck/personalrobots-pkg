<package>
  <description>
    Place recognition using a vocabulary tree.
  </description>
  <author>Patrick Mihelich</author>
  <license>BSD</license>
  <review status="unreviewed" notes=""/>
  <depend package="roscpp"/>
  <depend package="opencv_latest"/>
  <depend package="eigen"/>
  <depend package="star_detector"/>
  <depend package="fast_detector"/>
  <depend package="calonder_descriptor"/>
  <depend package="visual_odometry"/>

  <!-- pylab, from matplotlib, is used in tests -->
  <sysdepend os="ubuntu" version="8.04-hardy" package="python-matplotlib" />
  <sysdepend os="ubuntu" version="7.10-gutsy" package="python-matplotlib" />
  
  <export>
    <cpp cflags="-I${prefix}/include" lflags=" -L${prefix}/lib -lstarfeature"/>
  </export>
</package>
