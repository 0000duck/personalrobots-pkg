
<launch>
    <node pkg="recognition_lambertian" name="recognition_lambertian" type="recognition_lambertian" respawn="false" output="screen">
        <param name="display" type="bool" value="false" />
        <param name="target_frame" value="base_link" />

    </node>

    <node pkg="recognition_lambertian" name="model_fitter" type="model_fitter" respawn="false" output="screen">
        <param name="display" type="bool" value="true" />
        <param name="template_path"  value="$(find recognition_lambertian)/templates" />
    </node>

</launch>

