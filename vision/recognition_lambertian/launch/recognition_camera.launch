
<launch>

  <node name="stereodcam" pkg="dcam" type="stereodcam" respawn="false">
    <param name="videre_mode" type="str" value="none"/>
    <param name="do_colorize" type="bool" value="True"/>
    <param name="do_rectify" type="bool" value="True"/>
    <param name="do_stereo" type="bool" value="True"/>
    <param name="do_calc_points" type="bool" value="True"/>
  </node>
  <node name="stereoproc" pkg="stereo_image_proc" type="stereoproc" respawn="false"/>

 <node pkg="recognition_lambertian" name="plane_fit" type="plane_fit" respawn="false"/>
 
<node pkg="recognition_lambertian" name="recognition_lambertian" type="recognition_lambertian" respawn="false" output="screen">
   <param name="display" type="bool" value="true" />
   <param name="template_path"  value="$(find recognition_lambertian)/data/templates.txt" />
 </node>

</launch>

